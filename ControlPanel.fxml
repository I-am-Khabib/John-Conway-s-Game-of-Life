<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="625.0" prefWidth="267.0" spacing="8" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">

    <padding><Insets left="25" right="25" /></padding>
    <!--Main-->
    <Label text="Conway's Game Of Life" />
    <!--Play, pause, and stop-->
    <HBox spacing="10">
        <Button fx:id="playButton" prefHeight="25.0" prefWidth="46.0" text="Play" />
        <Button fx:id="pauseButton" prefHeight="25.0" prefWidth="49.0" text="Pause" />
        <Button fx:id="clearButton" prefHeight="25.0" prefWidth="48.0" text="Clear" />
      <Button fx:id="NextButton" text="Next" />
    </HBox>
    <!--Zoom-->
   <Label text="Zoom" />
   <Slider fx:id="zoomSlider" prefWidth="190" />
    <!--Speed-->
    <Label text="Game Speed" />
    <Slider fx:id="speedSlider" prefWidth="190" />
    <!--Rules-->
    <Label text="Game Rules" />
    <ComboBox fx:id="rulesCombo" prefWidth="190" />
    <!--Patterns-->
    <Label text="Patterns" />
    <ComboBox fx:id="patternsCombo" prefWidth="190" />
    <ImageView fx:id="patternImageView" fitHeight="180" fitWidth="180" />
    <HBox alignment="CENTER">
        <Button fx:id="addPatternButton" prefWidth="85" text="Add" />
    </HBox>
    <!--Database-->
    <Label text="Database" />
    <HBox spacing="10">
        <Button fx:id="saveButton" prefHeight="25.0" prefWidth="77.0" text="Save" />
        <Button fx:id="loadButton" prefHeight="25.0" prefWidth="76.0" text="Load" />
      <Button fx:id="deleteButton" prefHeight="25.0" prefWidth="70.0" text="Delete" />
    </HBox>
    <!--Random-->
    <Label text="Generate Random Grid" />
    <HBox spacing="10">
        <Button fx:id="randomButton" prefWidth="85" text="Go" />
        <TextField fx:id="randomTextField" promptText="Life Chance E.g. 0.1" />
    </HBox>
    <!--Color Options-->
    <HBox spacing="10">
        <Label text="Use Cell Age Colors: " />
        <CheckBox fx:id="useColorsCheckBox" />
    </HBox>
</VBox>
